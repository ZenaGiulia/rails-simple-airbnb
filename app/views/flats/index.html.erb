<h2 class="text-start mt-5 mx-5"> All our Flats <%="(#{@flats.count})" %></h2>
<div class="container">
<div id="flats" class="d-inline-flex flex-wrap">
  <% @flats.each do |flat| %>
  <div class="card m-2" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%="#{flat.name}" %></h5>
    <p class="card-text"><%="#{flat.address}" %></p>
    <div class="d-flex align-items-center">
    <i class="fa-solid fa-user fs-6 flex-grow-1">
      <%="#{flat.number_of_guests}" %> </i>
    <p>
    <div class="flex-grow-1 ms-2">
    <i class="fa-solid fa-euro-sign"></i>
    <%="#{flat.price_per_night}" %> </i>
    </div>
    </div>
    <div class="mt-3">
      <%= link_to "More info", flat %>
      </div>
    </p>
  </div>
</div>
  <% end %>
</div>
</div>
<div class="mx-5">
  <%= link_to "New flat", new_flat_path %>
</div>
</div>
